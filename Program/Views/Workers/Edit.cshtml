@model Projects.Context.Worker

@using (Html.BeginForm("Update", "Workers", new { Id = Model.Id }, FormMethod.Post))
{
    <div class="col-lg-5">
        <h4>Worker #@Model.Id</h4>
        <hr />

        <div class="form-group col-lg-offset-1">
            <label>First name</label>
            <input name="FirstName" class="form-control" type="text" value="@Model.FirstName" />
        </div>
        <div class="form-group col-lg-offset-1">
            <label>Last name</label>
            <input name="LastName" class="form-control" type="text" value="@Model.LastName" />
        </div>
        <div class="form-group col-lg-offset-1">
            <label>Middle name</label>
            <input name="MiddleName" class="form-control" type="text" value="@Model.MiddleName" />
        </div>
        <div class="form-group col-lg-offset-1">
            <label>Email</label>
            <input name="Email" class="form-control" type="text" value="@Model.Email" />
        </div>

        <div class="form-group col-lg-3">
            <button type="submit" class="btn-success form-control">Save</button>
        </div>
    </div>
}
